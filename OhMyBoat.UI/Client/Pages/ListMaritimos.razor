@page "/all-ships"
@using Microsoft.AspNetCore.Components.Authorization;
@using Microsoft.AspNetCore.Authorization;
@attribute [Authorize]

@inject HttpClient HttpClient
@using OhMyBoat.UI.Client.Extensions
@using OhMyBoat.UI.Shared
@using OhMyBoat.UI.Shared.Entidades
@inject IJSRuntime JsRuntime


<h3>Navios Disponibles para intercambio</h3>

@code {
    List<Maritimo> ListaMisNavios;


    protected override async Task OnInitializedAsync()
    {
            ListaMisNavios = await ((HttpClient) HttpClient).GetFromJsonAsync<List<Maritimo>>("api/ListarNaviosDisponibles");
            if (ListaMisNavios.Count == 0)
            {
                await JsRuntime.InvokeVoidAsync("alert", "Aun no hay ningún navío registrado aún.");
            }        
        }
    } 
}
