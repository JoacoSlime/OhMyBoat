@page "/all-landships"
@using Microsoft.AspNetCore.Components.Authorization;
@using Microsoft.AspNetCore.Authorization;
@attribute [Authorize]

@inject HttpClient HttpClient
@using OhMyBoat.UI.Client.Extensions
@using OhMyBoat.UI.Shared
@using OhMyBoat.UI.Shared.Entidades
@inject IJSRuntime JsRuntime

<h3>Vehiculos disponibles para intercambio</h3>

<AuthorizeView>
    <Authorized>

        @if (ListaTerrestres.Count == 0)
        {
            <p>No hay Navios en el sistema</p>
        }
        else
        {
            @foreach (var Nav in ListaTerrestres)
            {
                <div class="container-navio">
                    <div>
                        <p>@Nav.Matricula</p>
                    </div>
                </div>
            }
        }
    </Authorized>
</AuthorizeView>


@code {
    List<Terrestre> ListaTerrestres;


    protected override async Task OnInitializedAsync()
    {
            ListaTerrestres = await  HttpClient.GetFromJsonAsync<List<Terrestre>>("api/Vehiculos/ListarVehiculosDisponibles");
            if (ListaTerrestres.Count == 0)
            {
                await JsRuntime.InvokeVoidAsync("alert", "Aun no hay ningún vehículo terrestre registrado .");
            }        
        }
    } 
}