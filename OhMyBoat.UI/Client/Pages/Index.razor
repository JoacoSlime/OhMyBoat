@page "/"
@using Microsoft.AspNetCore.Components.Authorization
@inject NavigationManager navManager


<PageTitle>Index</PageTitle>

    
    <h1>Bienvenido a OhMyBoat!</h1>
    
    <AuthorizeView Roles="jefe">
        <h1> hola maldito jefe</h1>
    </AuthorizeView>
    <AuthorizeView Roles="empleado">
        <h1> hola maldito empleado, te voy a negrear</h1>
    </AuthorizeView>
    <AuthorizeView Roles="cliente">
        <h1> hola maldito cliente, paga tus deudas</h1>
    </AuthorizeView>
    <AuthorizeView>
        <Authorized>
        <p>¡Utiliza el panel de la izquierda para empezar a navegar!</p>
        </Authorized>
        <NotAuthorized>
            <div>
                <button class="btn nav_button btn-primary login_button" @onclick="routeLogIn">Iniciar Sesión</button>
                <button class="btn nav_button btr-secondary register_button" @onclick="routeRegister">Registrarse</button>
            </div>
        </NotAuthorized>
    </AuthorizeView>

@code {
    private void routeLogIn() {
        navManager.NavigateTo("/login");
    }
    private void routeRegister() {
        navManager.NavigateTo("/register");
    }
}