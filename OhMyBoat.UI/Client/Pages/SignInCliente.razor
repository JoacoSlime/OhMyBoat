@code{
    static bool IsMayusc(char c){
        return (c >= 'A' && c <= 'Z');
    }
    static bool HasNum(string password){
        char[] characters = password.ToCharArray();
        int numCounter = 0;
        foreach (char c in characters){
            if (char.IsNumber(c)){
                numCounter ++;
            }
        }
        return numCounter > 1;
    }
    static bool HasSymbol(char c){
        String specials = "!?¿¡#$%&/=+-*_@";
        return specials.Contains(c);
    }
    static bool IsLong(string password){
        return password.Length >= 8;
    }

    static bool IsValidPassword(string password){
        return
        IsLong(password) && 
        TieneNum(password) &&
        password.Any(c => IsMayusc(c)) && 
        password.Any(c => HasSymbol(c));
    }
