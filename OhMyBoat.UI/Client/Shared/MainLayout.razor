@inherits LayoutComponentBase;
@using Microsoft.AspNetCore.Components.Authorization;
@using OhMyBoat.UI.Client.Extensions;
@inject AuthenticationStateProvider authStateProvider;
@inject NavigationManager navManager;
@inject IJSRuntime JsRuntime;
@using OhMyBoat.UI.Client.Pages;


<div class="page">
    <div class="d-flex flex-column sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4">
            <CascadingAuthenticationState>
                <AuthorizeView>
                    <Authorized>
                        @if (showAccountButton) {
                            <button class="btn account-button" @onclick=switchAccountComponent><Icon Name="IconName.PersonFill" Size="IconSize.x4"></Icon></button>
                        }
                        @if(showAccount) {
                            <div class="account-popup">
                                <Account/>
                            </div>
                        }
                    </Authorized>
                </AuthorizeView>
            </CascadingAuthenticationState>
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>



@code {
    private bool showAccountButton { get; set; }
    
    protected override void OnParametersSet()
    {
        showAccountButton = (this.Body.Target as RouteView)?.RouteData?.PageType?.ToString() != "OhMyBoat.UI.Client.Pages.VerPerfil";
        showAccount = false;
    }

    private bool showAccount = false;
    private void switchAccountComponent() {
        showAccount = !showAccount;
    }
}