@inherits LayoutComponentBase;
@using Microsoft.AspNetCore.Components.Authorization;
@using OhMyBoat.UI.Client.Extensions;
@inject AuthenticationStateProvider authStateProvider;
@inject NavigationManager navManager;
@inject IJSRuntime JsRuntime;
@using OhMyBoat.UI.Client.Pages;


<div class="page">
    <div class="d-flex flex-column sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4">
            <CascadingAuthenticationState>
                <AuthorizeView>
                    <Authorized>
                        <button class="btn btn-secondary" @onclick=logoutClick href="javascript:void(0)"><span class="oi oi-account-logout" aria-hidden="true"></span> Cerrar Sesión</button>
                        @if (showAccountButton) {
                            <button class="btn account-button" @onclick=switchAccountComponent><span class="oi oi-person" title="Mi Cuenta" aria-hidden="true"></span></button>
                        }
                        @if(showAccount) {
                            <div class="account-popup">
                                <VerPerfil/>
                            </div>
                        }
                    </Authorized>
                </AuthorizeView>
            </CascadingAuthenticationState>
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>



@code {
    private bool showAccountButton { get; set; }
    
    protected override void OnParametersSet()
    {
        showAccountButton = (this.Body.Target as RouteView)?.RouteData?.PageType?.ToString() != "OhMyBoat.UI.Client.Pages.VerPerfil";
        showAccount = false;
    }

    private bool showAccount = false;
    private void switchAccountComponent() {
        showAccount = !showAccount;
    }
    private async Task logoutClick() {
        if (!await JsRuntime.InvokeAsync<bool>("confirm", "Estás seguro de que quieres cerrar la sesión?"))
            return;
        await logout();
    }
    private async Task logout()
    {
        var authState = (AuthenticationExtension) authStateProvider;
        await authState.ActualizarEstadoAutenticacion(null);
        navManager.NavigateTo("/", true);
    }
}